<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <stroke android:width="3dp" android:color="#FFFFFF"/> <corners android:radius="8dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF"/> <stroke android:width="2dp" android:color="#FFFFFF"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/>
            <stroke android:width="0dp" android:color="#00000000"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
